<h5 style="color: #4433dd;">Written Thoughts</h5>
<div class="row myRow">
    {{#each thoughts}}
        <div id="publicThoughts" class="col s12 m4">
            <div class="card myColumn">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h6 id="thoughtTitle">{{title}}</h6>
                    <p>{{stripTags (truncate body 100)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/thoughts/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/thoughts/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    
    {{else}}
        <p><i><strong>No written thoughts to display</strong></i></p>
    {{/each}}
</div>