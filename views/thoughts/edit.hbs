<h5 style="color: #4433DD;">Edit Written Thought</h5>
<div class="row">
    <form action="/thoughts/{{thought._id}}" method="post" class="col s12">
       <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{thought.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                   {{#select thought.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h6>Make Your Adjustment:</h6>
                <textarea name="body" id="body" cols="30" rows="10">{{thought.body}}</textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn saveBtn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>